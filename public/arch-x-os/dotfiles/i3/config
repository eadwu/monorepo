# i3-gaps config
for_window [class="^.*"] border pixel 1
gaps inner 10
gaps outer -4
smart_gaps on
smart_borders on

# dynamic gap resizing
bindsym $mod+plus gaps inner current plus 1
bindsym $mod+minus gaps inner current minus 1
bindsym $mod+0 gaps inner current set 0
bindsym $mod+Shift+plus gaps outer current plus 1
bindsym $mod+Shift+minus gaps outer current minus 1
bindsym $mod+Shift+0 gaps outer current set 0

# toggle compton opaque
bindsym $mod+o exec --no-startup-id compton-trans -c -o 92
bindsym $mod+shift+o exec --no-startup-id compton-trans -c -o 100

# lock, suspend, logout, switch user, hibernate, reboot, and shutdown features
bindsym $mod+BackSpace mode "$mode_system"
set $mode_system  [e]xit, [s]uspend,  [r]eboot, [Shift+s]hutdown
#set $mode_system (l)ock, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
  #bindsym l exec --no-startup-id i3exit lock, mode "default"
  bindsym s exec --no-startup-id i3exit suspend, mode "default"
  #bindsym u exec --no-startup-id i3exit switch_user, mode "default"
  bindsym e exec --no-startup-id i3exit logout, mode "default"
  #bindsym h exec --no-startup-id i3exit hibernate, mode "default"
  bindsym r exec --no-startup-id i3exit reboot, mode "default"
  bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

