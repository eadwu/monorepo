cabal-version:       2.4

name:                boxpub
version:             0.1.0.0
synopsis:            boxnovel epub generator
license:             BSD-3-Clause
license-file:        LICENSE
author:              Edmund Wu
maintainer:          edmund.wu@protonmail.com

homepage:            https://git.sr.ht/~eadwu/boxpub
bug-reports:         https://todo.sr.ht/~eadwu/boxpub

source-repository head
  type:      git
  location:  https://git.sr.ht/~eadwu/boxpub

library
  build-depends:     base ^>=4.12.0.0
  hs-source-dirs:    src
  extra-lib-dirs:    target/release
  extra-libraries:   fs
  exposed-modules:   Boxpub.Client.FileSystem
  other-extensions:  ForeignFunctionInterface
  default-language:  Haskell2010

executable boxpub
  main-is:           Main.hs
  build-depends:     base ^>=4.12.0.0
                   , scalpel ^>=0.5.1
                   , optparse-applicative ^>=0.14.2.0
  other-modules:     Paths_boxpub
  hs-source-dirs:    src
  extra-lib-dirs:    target/release
  exposed-modules:   Boxpub.Client
                   , Boxpub.Client.Env
                   , Boxpub.Client.FileSystem
                   , Boxpub.Client.Parser
  extra-libraries:   fs
  default-language:  Haskell2010
